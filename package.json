{
  "name": "@livepeer/branch-manifest-action",
  "version": "1.0.0",
  "description": "Generate branch manifest file for livepeer builds strategy",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/livepeer/action-gh-branch-manifest.git"
  },
  "keywords": [
    "typescript",
    "github",
    "action",
    "livepeer"
  ],
  "author": "hjpotter92",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/livepeer/action-gh-branch-manifest/issues"
  },
  "homepage": "https://github.com/livepeer/action-gh-branch-manifest#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^5.47.0",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.30.0",
    "eslint-plugin-github": "^4.6.0",
    "jest": "^29.3.1",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.2",
    "typescript": "^4.9.4"
  }
}
